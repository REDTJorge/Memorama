<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/mainActivityTvTurnPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="24sp"
            android:text="Es turno del"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/mainActivityTvPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainActivityTvTurnPlayer1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/player1"
            android:textSize="24sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mainActivityTvPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainActivityTvTurnPlayer1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/player2"
            android:textSize="24sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/mainActivityTvPlayerScore1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainActivityTvPlayer1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Puntos: 0"
            android:textSize="24sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/mainActivityTvPlayerScore2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainActivityTvPlayer2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Puntos: 0"
            android:textSize="24sp"
            android:visibility="visible" />

    </RelativeLayout>

</layout>
